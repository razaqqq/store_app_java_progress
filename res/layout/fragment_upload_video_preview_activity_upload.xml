<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home.UploadVideoPreviewActivityUploadFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Video Name"
                android:id="@+id/fragment_upload_video_preview_activity_upload_ed_video_name"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="Video Descriptions"
                android:id="@+id/fragment_upload_video_preview_activity_upload_ed_video_descriptions"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="Video Sub Descriptions"
                android:id="@+id/fragment_upload_video_preview_activity_upload_ed_video_sub_descriptions"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:text="SAVE"
            android:textSize="24sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:id="@+id/fragment_upload_video_preview_activity_upload_save"/>
            <ProgressBar
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/fragment_upload_video_preview_activity_upload"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/fragment_upload_video_preview_activity_upload_close"/>



</FrameLayout>